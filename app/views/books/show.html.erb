<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if current_user && current_user.id == @book.user_id %>
        <%= render 'users/name', user: @user_current %>
        <%= render 'users/new', book: @book_new %>
      <% else %>
        <%= render 'users/others', user: @user %>
        <%= render 'users/new', book: @book_new %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <tr>
          <th>
            <h2>Book detail</h2>
          </th>
        </tr>
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100,100) %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confitm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
            <%= link_to @book.user.name, user_path(@book.user.id) %>
          </td>
        </tr>
      </table>
      </div>
    </div>
  </div>
</div>
