
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if current_user && current_user.id == @book.user_id %>
        <%= render 'users/name', user: @user_current %>
        <%= render 'users/new', book: @book %>
      <% else %>
        <%= render 'users/others', user: @user %>
        <%= render 'users/new', book: @book %>
      <% end %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>
            <h2>Books</h2>
          </th>
        </tr>
        <tr>
          <td>
          </td>
          <td>
            <h6>Title</h6>
          </td>
          <td>
            <h6>Opinion</h6>
          </td>
        </tr>

          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>

      </table>
    </div>
  </div>
</div>